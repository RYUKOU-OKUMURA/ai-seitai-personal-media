# Site
SITE_URL=https://your-domain.example
PUBLIC_SITE_URL=https://your-domain.example

# Contact form destination
CONTACT_TO_EMAIL=owner@example.com

# Cloudflare Turnstile
TURNSTILE_SITE_KEY=your_turnstile_site_key
PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Distributed rate-limit and idempotency store (Upstash Redis)
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_rest_token

# Mail providers (primary: Gmail SMTP, fallback: Resend)
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=xxxx_xxxx_xxxx_xxxx
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=Website Contact <noreply@your-domain.example>
RESEND_DEFAULT_TO_EMAIL=owner@example.com

# Cron authentication secret for /api/contact-retry
CONTACT_RETRY_CRON_SECRET=replace_with_random_secret
# Optional: Vercel built-in secret used by cron authorization header
CRON_SECRET=replace_with_random_secret

# YouTube Data API v3
YOUTUBE_API_KEY=your_api_key_here
YOUTUBE_CHANNEL_ID=your_channel_id_here

# microCMS
MICROCMS_SERVICE_DOMAIN=your-service-domain
MICROCMS_API_KEY=your-api-key
